ROOT := "/home/heyrict/.wine"
HOME := ROOT + "/drive_c/users/heyrict"

run FILE:
	LC_ALL=ja_JP.UTF-8 LANG=ja_JP.UTF-8 wine64 "{{FILE}}"

_run_program_in FOLDER PROGRAM:
	cd "{{FOLDER}}" && LC_ALL=ja_JP.UTF-8 LANG=ja_JP.UTF-8 wine64 "{{PROGRAM}}"

_nvidia_run_program_in FOLDER PROGRAM:
	cd "{{FOLDER}}" && LC_ALL=ja_JP.UTF-8 LANG=ja_JP.UTF-8 pvkrun wine64 "{{PROGRAM}}"

th07:
	just _run_program_in "{{HOME}}/Games/touhou/th07/" th07.exe

