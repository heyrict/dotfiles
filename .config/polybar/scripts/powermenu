#!/bin/bash

## Created By Aditya Shakya

#MENU="$(rofi -sep "|" -dmenu -i -p 'System' -location 5 -xoffset -14 -yoffset -52 -width 10 -hide-scrollbar -line-padding 4 -padding 20 -lines 4 <<< " Lock| Logout| Reboot| Shutdown")"
MENU="$(rofi -sep "|" -dmenu -font 'Meslo Nerd Font Mono 12' -i -p 'System' -location 5 -xoffset -14 -yoffset -52 -width 12 -hide-scrollbar -line-padding 4 -padding 20 -lines 5 <<< " Lock| Suspend| Hibernate| Reboot|⏻ Shutdown")"

case "$MENU" in
    *Lock) i3lock -c 002b36 ;;
    *Suspend) systemctl suspend;;
    *Hibernate) systemctl hibernate;;
    *Reboot) systemctl reboot ;;
    *Shutdown) systemctl -i poweroff
esac
