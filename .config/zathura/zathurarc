# solarized dark
#set recolor-lightcolor \#002b36
#set recolor-darkcolor \#839496
#set default-bg \#073642

# solarized light
set recolor-lightcolor \#fdf6e3
set recolor-darkcolor \#002b36
set default-bg \#eee8d5

map [normal] <C-1> set "recolor-lightcolor \#002b36"
map [normal] <C-2> set "recolor-darkcolor \#eee8d5"
map [normal] <C-3> set "default-bg \#073642"
map [normal] <C-4> set "recolor-lightcolor \#fdf6e3"
map [normal] <C-5> set "recolor-darkcolor \#002b36"
map [normal] <C-6> set "default-bg \#eee8d5"

map [fullscreen] <C-1> set "recolor-lightcolor \#002b36"
map [fullscreen] <C-2> set "recolor-darkcolor \#eee8d5"
map [fullscreen] <C-3> set "default-bg \#073642"
map [fullscreen] <C-4> set "recolor-lightcolor \#fdf6e3"
map [fullscreen] <C-5> set "recolor-darkcolor \#002b36"
map [fullscreen] <C-6> set "default-bg \#eee8d5"

# enable theme
set recolor true

set scroll-step 80
set vertical-center true

map [normal] . navigate next
map [fullscreen] . navigate next

map [normal] , navigate previous
map [fullscreen] , navigate previous

#map [normal] n navigate next
