# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym y resize shrink width 10px; resize shrink height 10px
        bindsym n resize grow width 10px; resize grow height 10px

        bindsym 1 resize set 400 300
        bindsym 2 resize set 480 360
        bindsym 3 resize set 560 420
        bindsym 4 resize set 640 480
        bindsym 5 resize set 800 600
        bindsym 6 resize set 1024 768

        bindsym Shift+1 resize set 480 270
        bindsym Shift+2 resize set 640 360
        bindsym Shift+3 resize set 900 450
        bindsym Shift+4 resize set 1060 540
        bindsym Shift+5 resize set 1220 630
        bindsym Shift+6 resize set 1366 768

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym q mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Control+bracketleft mode "default"
        bindsym $mod+r mode "default"
        bindsym $mod+m mode "move"
}

bindsym $mod+r mode "resize"

# move window
mode "move" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h move left  10 px
        bindsym j move down  10 px
        bindsym k move up    10 px
        bindsym l move right 10 px

        bindsym y move up   10 px; move left  10 px
        bindsym u move up   10 px; move right 10 px
        bindsym b move down 10 px; move left  10 px
        bindsym n move down 10 px; move right 10 px

        bindsym Shift+y move position 0 px 0 px
        bindsym Shift+u exec "~/.config/i3/set-window-position.sh u"
        bindsym Shift+b exec "~/.config/i3/set-window-position.sh b"
        bindsym Shift+n exec "~/.config/i3/set-window-position.sh n"

        bindsym c       move position center
        bindsym Shift+c move absolute position center
        bindsym m       move position mouse

        # same bindings, but for the arrow keys
        bindsym Left  move left  10 px
        bindsym Down  move down  10 px
        bindsym Up    move up    10 px
        bindsym Right move right 10 px

        # back to normal: Enter or Escape or $mod+r
        bindsym q mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Control+bracketleft mode "default"
        bindsym $mod+m mode "default"
        bindsym $mod+r mode "resize"
}

bindsym $mod+m mode "move"


