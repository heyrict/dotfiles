# resize window (you can also use the mouse for that)
set $rofi_mode Rofi: DRun Win Kao/Emoji Pow Combi = dIce
mode "$rofi_mode" {
    # :drun (bash -e "{cmd}; read -n 1 -s ")
    bindsym d mode "default"; exec --no-startup-id "rofi -show drun"

    # :window
    bindsym w mode "default"; exec --no-startup-id "rofi -show window"

    # :ssh
    #bindsym s mode "default"; exec --no-startup-id "rofi -show ssh"

    # :run
    bindsym r mode "default"; exec --no-startup-id "_res=\\"$(rofi -show run)\\"; if [ -n \\"$_res\\" ]; then notify-send Result $_res; fi"

    # :ssh
    bindsym f mode "default"; exec --no-startup-id firefox

    # :combi
    bindsym c mode "default"; exec --no-startup-id "rofi -show combi"

    # :calc
    bindsym equal mode "default"; exec --no-startup-id "_exp=\\"$(rofi -dmenu -i -p calc -lines 0)\\"; notify-send \\"$_exp\\" \\"= $(echo \\"$_exp\\" | bc -l)\\" "

    ## rofi-theme-selector
    #bindsym t mode "default"; exec --no-startup-id "rofi-theme-selector"

    # :emoji
    bindsym e mode "default"; exec --no-startup-id "rofimoji"

    # :kaomoji
    bindsym k mode "default"; exec --no-startup-id "~/.config/rofi/kaomoji/kaomoji.sh"

    # powermenu
    bindsym p mode "default"; exec --no-startup-id "~/.config/polybar/scripts/powermenu"

    # rustdice
    bindsym i mode "default"; exec --no-startup-id "_exp=\\"$(rofi -dmenu -i -p dice -lines 0)\\"; notify-send \\"$(rustdice \\"$_exp\\")\\" "

    # back to normal: Enter or Escape or $mod+r
    bindsym q mode "default"
    bindsym Control+bracketleft mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+d mode "$rofi_mode"


