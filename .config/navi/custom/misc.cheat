% misc.qrcode

# Generate a QR code
if [ <colored> = true ]; then\
    myqr -d /tmp -n qrcode.png -p ~/Pictures/avata2.jpg -c "<string>";\
else\
    myqr -d /tmp -n qrcode.png -p ~/Pictures/avata2.jpg "<string>";\
fi
xdg-open /tmp/qrcode.png
rm /tmp/qrcode.png

$ colored: echo true false | tr " " "\n"


